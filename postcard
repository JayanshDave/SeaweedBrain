            --paper-color: #fff;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            background-color: var(--bg-color);
            font-family: 'Helvetica Neue', sans-serif;
        }

        /* Main Postcard Container */
        .postcard {
            width: var(--card-width);
            height: var(--card-height);
            background-color: var(--paper-color);
            display: flex;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
            border-radius: 4px;
            overflow: hidden;
        }

        /* Left Side: Image Upload */
        .postcard-image {
            flex: 1;
            background-color: #e0e0e0;
            position: relative;
            cursor: pointer;
            overflow: hidden;
            transition: background 0.3s;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .postcard-image:hover {
            background-color: #d6d6d6;
        }

        .postcard-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: none; /* Hidden until image is uploaded */
        }

        .upload-prompt {
            text-align: center;
            color: #666;
            padding: 20px;
            pointer-events: none; /* Lets clicks pass through to container */
        }

        .upload-icon {
            font-size: 40px;
            margin-bottom: 10px;
            display: block;
        }

        /* Hidden file input */
        #fileInput {
            display: none;
        }

        /* Right Side: Message Area */
        .postcard-text {
            flex: 1;
